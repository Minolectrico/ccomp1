#include<iostream>
#include<iomanip>
#include<array>
using namespace std;
int sumar(const int array[],const int tam){
    long sum=0;
    for (int i = 0; i < tam; sum+=array[i++]);
    return sum;
    }
int main1(){
    int arr[]={1,2,3,4,5,6,7};
    cout<<"suma de los elementos es "<<sumar(arr, 7)<<endl;
}

int main(){
